<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".PostActivity"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/repost_title_edit"
            android:layout_width="990dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:hint="제목"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            />

        <Button
            android:id="@+id/repost_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:text="저장하기"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/repost_contents_edit"
        android:layout_width="600dp"
        android:layout_height="354dp"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:gravity="top"
        android:hint="내용을 적으세요."
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="아래를 눌러 이미지를 추가 하세요. "
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/postimg"
        android:layout_width="match_parent"
        android:layout_height="498dp"
        app:srcCompat="@drawable/add_picture" />

</LinearLayout>